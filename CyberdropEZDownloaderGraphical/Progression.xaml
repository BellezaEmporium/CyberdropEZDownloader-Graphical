<Window x:Class="CyberdropEZDownloaderGraphical.Progression"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberdropEZDownloaderGraphical"
        mc:Ignorable="d"
        Title="Progression" Height="450" Width="800">
    <Grid>

        <ProgressBar Name="Progress" Value="{Binding CheckedPercentage, UpdateSourceTrigger=PropertyChanged}" Margin="40,172,40,172"></ProgressBar>
    </Grid>
</Window>
